			<link href='https://fonts.googleapis.com/css?family=Roboto:400,300,300italic,400italic,500,500italic' rel='stylesheet' type='text/css'>
		-->
		<link rel="stylesheet" href="<%= site_url %>/assets/css/app.css">

  </head>
  <body class="page-<%- current.path[0] %>">
		<header class="header">
			<a class="brand-logo" href="<%= site_url %>">
				<img src="<%= site_url %>/assets/images/logo.png">
			</a>

			<nav class="nav-primary">
			  <div class="container">
			    <!-- Brand and toggle get grouped for better mobile display -->
			    <div class="navbar-header">
			      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
			        <span class="sr-only">Toggle navigation</span>
			        <span class="icon-bar"></span>
			        <span class="icon-bar"></span>
			        <span class="icon-bar"></span>
			      </button>
			    </div>

			    <!-- Collect the nav links, forms, and other content for toggling -->
			    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
			      <ul class="nav navbar-nav nav-primary-list">
			        <li><a href="#">About</a></li>
							<li><a href="#">Issues</a></li>
							<li><a href="#">Volunteer</a></li>
			        <li><a href="#">Donate</a></li>
			      </ul>
			    </div><!-- /.navbar-collapse -->
			  </div><!-- /.container-fluid -->
			</nav>

		</header>
	<!--	<button class="trigger" data-info="Click to see the header effect"><span>Trigger</span></button> -->

		<section class="content">
    		<%- yield %>
		</section>


    <footer class="minc-footer">
			<div class="container">
				<div class="row">
					<div class="col-sm-12">

					</div>
				</div>
			</div>
		</footer>
